BoxLayout:
	orientation: 'vertical'
	spacing: dp(20)
	MDRaisedButton:
		pos_hint: {"center_x": .5, "center_y": .5}
		size_hint: .2, .1
		text: "Battery"
		on_release:
			app.show_battery_info()
	MDRaisedButton:
		pos_hint: {"center_x": .5, "center_y": .5}
		size_hint: .2, .1
		text: "Vibrate"
		on_release:
			app.vibrate()
	MDTextField:
		pos_hint: {"center_x": .5, "center_y": .5}
		size_hint: .2, .1
		id: field
		hint_text: "Text to speech"
	MDRaisedButton:
		pos_hint: {"center_x": .5, "center_y": .5}
		size_hint: .2, .1
		text: "TTS"
		on_release:
			app.speak(field.text)
